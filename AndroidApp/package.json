{
  "name": "weather-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview --port 5173",
    "cap:sync": "npm run build && npx cap sync",
    "cap:open": "npx cap open android",
    "cap:run": "npm run cap:sync && npx cap run android",
    "cap:build": "npm run cap:sync && cd android && ./gradlew assembleDebug",
    "cap:install": "cd android && ./gradlew installDebug",
    "cap:clean": "cd android && ./gradlew clean"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/geolocation": "^7.1.5",
    "@capacitor/preferences": "^7.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  }
}
